---
interface Props {
  path?: string;
  status?: string;
}

const { path = '~', status = 'READY' } = Astro.props;
---

<section class="terminal-shell" aria-label="Terminal shell">
  <header class="terminal-titlebar">
    <div class="terminal-dots" aria-hidden="true">
      <span class="dot dot-red"></span>
      <span class="dot dot-yellow"></span>
      <span class="dot dot-green"></span>
    </div>
    <p class="terminal-title">pasha@portfolio:{path}</p>
  </header>

  <div class="terminal-content" transition:name="terminal-content">
    <slot />
  </div>

  <footer class="terminal-statusbar">
    <p class="status-left">{path}</p>
    <p class="status-right">{status}</p>
  </footer>
</section>

<style>
  .terminal-shell {
    position: relative;
    width: 100%;
    border: 1px solid rgba(97, 175, 239, 0.35);
    border-radius: 0;
    overflow: hidden;
    background: rgba(10, 14, 20, 0.86);
    box-shadow:
      0 18px 56px rgba(0, 0, 0, 0.45),
      inset 0 0 40px rgba(57, 255, 20, 0.03);
    backdrop-filter: blur(8px);
  }

  .terminal-shell::before {
    content: '';
    position: absolute;
    inset: 0;
    pointer-events: none;
    background: repeating-linear-gradient(
      to bottom,
      rgba(197, 200, 198, 0.04) 0,
      rgba(197, 200, 198, 0.04) 1px,
      transparent 2px,
      transparent 4px
    );
    opacity: 0.22;
  }

  .terminal-titlebar,
  .terminal-statusbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    padding: 10px 14px;
    font-size: 0.875rem;
    color: var(--term-dim);
    background: rgba(0, 0, 0, 0.26);
  }

  .terminal-titlebar {
    border-bottom: 1px solid rgba(97, 175, 239, 0.2);
  }

  .terminal-statusbar {
    border-top: 1px solid rgba(97, 175, 239, 0.2);
  }

  .terminal-title,
  .status-left,
  .status-right {
    margin: 0;
  }

  .terminal-dots {
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  .dot-red {
    background: var(--term-red);
  }

  .dot-yellow {
    background: var(--term-yellow);
  }

  .dot-green {
    background: var(--term-green-dot);
  }

  .terminal-content {
    position: relative;
    z-index: 1;
    padding: 18px 14px;
    overflow-x: auto;
    contain: paint;
    will-change: transform, opacity;
  }

  @media (min-width: 768px) {
    .terminal-shell {
      border-radius: 12px;
    }

    .terminal-titlebar,
    .terminal-statusbar {
      padding: 10px 16px;
    }

    .terminal-content {
      padding: 24px 20px;
    }
  }
</style>
